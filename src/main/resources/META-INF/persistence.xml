<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence" version="1.0">

  <persistence-unit name="ApplicationEntityManager" transaction-type="RESOURCE_LOCAL">
    <provider>org.hibernate.ejb.HibernatePersistence</provider>
    <class>org.safehaus.model.User</class>
    <class>org.safehaus.model.Role</class>
    <class>org.safehaus.model.Session</class>
    <class>org.safehaus.model.Capture</class>
<!--    <class>org.safehaus.model.Story</class>
    <class>org.safehaus.model.Phase</class>-->
  </persistence-unit>
    <persistence-unit name="CassandraEntityManager">
        <provider>com.impetus.kundera.KunderaPersistence</provider>
        <properties>
            <property name="kundera.nodes" value="localhost" />
            <property name="kundera.port" value="9160"/>
            <property name="kundera.keyspace" value="jarvis" />
            <property name="kundera.dialect" value="cassandra" />
            <property name="kundera.ddl.auto.prepare" value="create" />
            <property name="kundera.client.lookup.class" value="com.impetus.client.cassandra.thrift.ThriftClientFactory" />
        </properties>
    </persistence-unit>

