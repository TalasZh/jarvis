  <persistence-unit name="cassandra-pu">
  	<provider>com.impetus.kundera.KunderaPersistence</provider>
    <class>org.safehaus.model.DocumentInfo</class>
    <class>org.safehaus.jira.model.JarvisLink</class>
    <class>org.safehaus.jira.model.JarvisIssueType</class>
    <class>org.safehaus.jira.model.JarvisMember</class>
    <class>org.safehaus.jira.model.JarvisIssue</class>
    <class>org.safehaus.stash.model.Link</class>
    <class>org.safehaus.stash.model.HibernateLinkMap</class>
    <class>org.safehaus.stash.model.HibernateSetMap</class>
    <class>org.safehaus.stash.model.StashUser</class>
    <exclude-unlisted-classes>true</exclude-unlisted-classes>
    <properties>
      <property name="kundera.nodes" value="localhost" />
      <property name="kundera.port" value="9160" />
      <property name="kundera.keyspace" value="jarvis" />
      <property name="kundera.dialect" value="cassandra" />
      <property name="kundera.ddl.auto.prepare" value="update" />
      <property name="kundera.client" value="thrift" />
      <property name="kundera.client.lookup.class"
                value="com.impetus.client.cassandra.thrift.ThriftClientFactory" />
      <property name="cql.version" value="3.0.0"/>
      <property name="kundera.client.property" value="kundera-cassandra.xml" />
      <!-- 			<property name="kundera.cache.provider.class"
               value="com.impetus.kundera.cache.ehcache.EhCacheProvider" />
             <property name="kundera.cache.config.resource" value="/ehcache-test.xml" />
             <property name="kundera.client.property" value="kunderaCounter.xml" />-->
    </properties>
  </persistence-unit>

